[flake8]
exclude =
    .git,
    .idea,
    .mypy_cache,
    .venv,
    __pycache__

select =
    E,
    F,
    W

ignore =
    E721,
    F842,
    W503,
    W504

quiet = 0
color = auto
format = default

count = True
statistics = True
show_source = False

hang_closing = True

indent_size = 4
max_line_length = 120
max_doc_length = 120

max_complexity = 10

disable_noqa = True